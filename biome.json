{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off",
				"noUselessFragments": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		},
		"ignore": [
			"node_modules",
			".cache",
			"build",
			".idea",
			"functions",
			".wrangler"
		]
	},
	"formatter": {
		"enabled": true,
		"ignore": [
			"node_modules",
			".cache",
			"build",
			".idea",
			"functions",
			".wrangler"
		]
	}
}
